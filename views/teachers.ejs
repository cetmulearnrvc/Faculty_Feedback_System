<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Teacher Feedback</title>
</head>
<body>
    <h1>View Teacher Feedback</h1>

    <!-- Dropdown to Select a Teacher -->
    <label for="teacher">Select a Teacher:</label>
    <select name="teacher_id" id="teacher" onchange="redirectToTeacher()">
        <option value="">-- Select Teacher --</option>
        <% teachers.forEach(teacher => { %>
            <option value="<%= teacher.id %>" <%= selectedTeacher == teacher.id ? "selected" : "" %>>
                <%= teacher.name %>
            </option>
        <% }); %>
    </select>

    <!-- Feedback Table -->
    <% if (feedbacks.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Q1</th>
                    <th>Q2</th>
                    <th>Q3</th>
                    <th>Q4</th>
                    <th>Q5</th>
                    <th>Suggestions</th>
                </tr>
            </thead>
            <tbody>
                <% feedbacks.forEach(feedback => { %>
                    <tr>
                        <td><%= feedback.student_name %></td>
                        <td><%= feedback.q1 %></td>
                        <td><%= feedback.q2 %></td>
                        <td><%= feedback.q3 %></td>
                        <td><%= feedback.q4 %></td>
                        <td><%= feedback.q5 %></td>
                        <td><%= feedback.suggestions %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No feedback available for this teacher.</p>
    <% } %>

    <br>
    <a href="/">Back to Home</a>

    <script>
        function redirectToTeacher() {
            var teacherId = document.getElementById("teacher").value;
            if (teacherId) {
                window.location.href = "/teachers/" + teacherId;
            }
        }
    </script>
</body>
</html>
